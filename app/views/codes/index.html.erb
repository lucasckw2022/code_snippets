<% @kind.each do |kind| %>
  <div class="kind"><%= kind.kind %> (<%=kind.codes.count%> Snippets)
  <ul class="list">
    <% kind.codes.each do |code| %>
    <%if code.is_private %>
      <% if code.user == current_user %>
      <li><%= link_to  code.title, code_path(code) %> - Created by: <%=code.user.first_name%></li>
      <%end%>
    <%else%>
      <li><%= link_to code.title, code_path(code) %> - Created by: <%=code.user.first_name%></li>
    <%end%>
    <% end %>
  </ul>
  </div>
<% end %>

